<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/linear_layout_padding">

        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/agata" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/huesito_like" />

            <LinearLayout
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Agata"
                    android:textSize="40dp"/>
                    <TextView
                        android:paddingLeft="16dp"
                        android:id="@+id/tvVotos"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textSize="30dp"
                        android:textAlignment="viewEnd"
                        android:gravity="end" />
                <ImageView
                    android:id="@+id/imgVotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/huesito_votos"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>